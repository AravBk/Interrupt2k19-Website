<div class="col-md-6">
    <div class="card site">
        <a href="#"><img src="/resources/images/polling/{{location}}" class="card-img-top"></a>
        <div class="card-body">
            
            {{#if title}}
                <h5 class="card-title">{{title}}</h5>
            {{else}}
                <h5 class="card-title">No Title</h5>
            {{/if}}
            
            {{#if teamname}}
                <p class="card-text">by : {{teamname}}</p>
            {{else}}
                <p class="card-text">by : Interrupt team</p>
            {{/if}}

            <div class="site-actions">
                <a href="#" class="btn site-link">View Site</a>
                {{#if isAuthenticated}}
                    <button value="{{value}}" class="vote btn site-vote">Vote <i class="far fa-heart"></i><i class="fas fa-heart"></i></button>
                {{else}}
                    <a href="/login"><button class="btn site-vote"> Vote <i class="far fa-heart"></i><i class="fas fa-heart"></i></button></a>
                {{/if}}

                
            </div><!-- .site-actions -->
        </div>
    </div><!-- .site -->
</div><!-- .col-md-6 -->