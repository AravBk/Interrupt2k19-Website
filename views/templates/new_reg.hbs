<input type="text" name="student[name]" class="inline" placeholder="Full Name" {{#if name}} value="{{name}}" {{/if}} required>
<input type="number" name="student[number]" class="inline" placeholder="Mobile Number" {{#if number}} value="{{number}}" {{/if}} required><br>
<input type="email" name="student[email]" class="inline" placeholder="E-Mail" {{#if email}} value="{{email}}" {{/if}}  required>
<input type="number" name="student[year]" class="inline" placeholder="Year" {{#if year}} value="{{year}}" {{/if}} required><br>
<input type="text" name="student[college]" class="inline" placeholder="College" {{#if college}} value="{{college}}" {{/if}}required>
<input type="text" name="student[dept]" class="inline" placeholder="Department" {{#if dept}} value="{{dept}}" {{/if}}><br>
<input type="password" name="student[password]" class="inline" placeholder="Password" {{#if password}} value="{{password}}" {{/if}} required>
<input type="password" name="student[confirmPassword]" class="inline" placeholder="Confirm Password"{{#if confirmPassword}} value="{{confirmPassword}}" {{/if}} required>

<button id="register">Submit!</button>

{{#if message}}
    <p class="text login-text">{{message}}</p>
{{else}}
    <p class="text login-text">Have an account already? Click the link below to login to your account.</p>
{{/if}}
<a href="/login" class="links">Login<span></span><i class="material-icons">arrow_right_alt</i></a>

